html
    head
        link(rel='stylesheet', href='/css/main.css')
    body
        include ./header.pug
        div(style='width:40%;margin-left:36%;margin-bot:0;padding:1px 16px;height:1000px;')
            form(action='/search', method='POST', style="margin-top:20px;")
                input#searchbox(style='float:right',placeholder="Type here", name='search')
                button#search(style='float:right',type='submit') Search
            br
            form(action='/post', method='POST')
                section#main
                    .text
                        img(src='http://placehold.it/100/100')
                        textarea#text(placeholder="What's on your mind", name='text')
                        input#tags(placeholder="tags(press space to add more)", name='tags')
                        button(type='submit') Post
                        br 
                        br
                        br
            each entit in ent
                a(href='/details/'+ entit._id style="text-decoration:none")
                    section(class="forumpost")
                        .text
                            img(src='http://placehold.it/100/100')
                            text(id="author") #{entit.author}
                            p #{entit.text}
                            p #{entit.time} ago
                            p Tags: #{entit.tagsText}




