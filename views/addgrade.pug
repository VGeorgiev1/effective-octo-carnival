html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Add a class
        link(rel='stylesheet', href='/css/registerDesign.css')
        link(href='https://fonts.googleapis.com/css?family=Nunito:400,300', rel='stylesheet', type='text/css')
        script(src='/scripts/jquery-3.2.1.js')
    body
        form(action='/addgrade', method='post')
            h1 Add a grade
            fieldset
                legend
                    | Add a grade  
                label(for='value') Value:
                input#value(type='text', name='value')
            fieldset#studentForm
                label(for='studentname') Student name:
                input#value(type='text', name='studentname')
                label(for='grade') Grade:
                select#grade(name='grade')
                        option(value='1') 1
                        option(value='2') 2
                        option(value='3') 3
                        option(value='4') 4
                        option(value='5') 5
                        option(value='6') 6
                        option(value='7') 7
                        option(value='8') 8
                        option(value='9') 9
                        option(value='10') 10
                        option(value='11') 11
                        option(value='12') 12
                label(for='class') Class:                        
                select#class(name='class')
                        option(value='A') A
                        option(value='B') B
                        option(value='C') C
                        option(value='D') D
            fieldset
                label(for='subject') Subject:
                input#subject(type='text', name='subject')
            fieldset
                label(for='name') Name:
                input#name(type='text', name='name')
            button(type='submit') Submit
script(src='/scripts/infiniteFields.js')