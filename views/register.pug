html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Sign Up Form
        link(rel='stylesheet', href='/css/registerDesign.css')
        link(href='https://fonts.googleapis.com/css?family=Nunito:400,300', rel='stylesheet', type='text/css')
        script(src='/scripts/jquery-3.2.1.js')
    body
        form(action='index.html', method='post')
            h1 Sign Up
            fieldset
                legend
                    span.number 1
                    | Your basic info
                label(for='name') Name:
                input#name(type='text', name='user_name')
                label(for='mail') Email:
                input#mail(type='email', name='user_email')
                label(for='password') Password:
                input#password(type='password', name='user_password')
                label Role:
                input#teacher(type='radio', value='teacher', name='role')
                label.light(for='teacher') Teacher
                br
                input#student(type='radio', value='student', name='role')
                label.light(for='student') Student
                br
                input#parent(type='radio', value='parent', name='role')
                label.light(for='parent') Parent
            fieldset#teacherForm
                label(for='subject1') Subject(s):
                input#subject1(type='text', name='subject1')
            fieldset#studentForm
                label(for='grade') Grade:
                select#grade(name='grade')
                        option(value='1') 1
                        option(value='2') 2
                        option(value='3') 3
                        option(value='4') 4
                        option(value='5') 5
                        option(value='6') 6
                        option(value='7') 7
                        option(value='8') 8
                        option(value='9') 9
                        option(value='10') 10
                        option(value='11') 11
                        option(value='12') 12
                label(for='class') Class:                        
                select#class(name='class')
                        option(value='A') A
                        option(value='B') B
                        option(value='C') C
                        option(value='D') D
            fieldset#parentForm
                label(for='childemail1') Child E-mail(s):
                input#childemail1(type='text', name='childemail1')
            button(type='submit') Sign Up
script(src='/scripts/register.js')